<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--MainActivity 레이아웃-->
    <RelativeLayout
        android:id="@+id/id_header"
        android:layout_width="match_parent"
        android:layout_height="380dp">

    <TextView
        android:id="@+id/id_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="welcome!"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/header_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/planting"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plant                     "
            android:layout_centerHorizontal="true"
            android:layout_below="@id/id_welcome"
            android:layout_marginTop="45dp"
            android:textColor="#A99FD880"
            android:textSize="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                     teacher "
            android:layout_centerHorizontal="true"
            android:layout_below="@id/id_welcome"
            android:layout_marginTop="45dp"
            android:textColor="#A99FD880"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/detect"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's make a diagnosis!"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:background="@drawable/bottom"
            android:stateListAnimator="@null"
            app:backgroundTint="#337A36"
            />
        <TextView
            android:id="@+id/marketing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:layout_below="@id/detect"
            android:text="-Lots of plant disease data!\n-Accurate system of consultation with experts \n-Market discount and various benefits!"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/marketing"
            android:textColor="#2196F3"
            android:textSize="20dp"
            android:text="Subscribe now!"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    <Button
        android:id="@+id/subscribe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/purple_500"
        android:text="subscribe"
        android:textSize="17dp"
        app:backgroundTint="@null"
        android:layout_toLeftOf="@id/premium"
        android:background="@drawable/subscribe"
        android:stateListAnimator="@null"
        />

        <Button
            android:id="@+id/premium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/subscribe"
            android:layout_weight="1"
            app:backgroundTint="@null"
            android:background="@drawable/premium"
            android:stateListAnimator="@null"
            android:text="premium"
            android:textSize="17dp" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/id_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">
                <ImageView
                    android:id="@+id/community_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/people"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/community"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/community_img"
                    android:layout_marginLeft="13dp"
                    android:text="community"
                    android:textSize="20dp" />
                <ImageView
                    android:id="@+id/market_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cart"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/market"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/market_img"
                    android:text="market"
                    android:textSize="20dp"
                />
                <ImageView
                    android:id="@+id/tip_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/sticker"
                    android:background="@color/white"
                    />
            <TextView
                android:id="@+id/tips"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:layout_below="@id/tip_img"
                android:text="tips"
                android:textSize="20dp"
                />
                <ImageView
                    android:id="@+id/mentor_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/online"
                    android:background="@color/white"
                    />
            <TextView
                android:id="@+id/mentor"
                android:text="mentor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/mentor_img"
                android:textSize="20dp"
                />
                <ImageView
                    android:id="@+id/cooperating_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="180dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cooperation"
                    android:background="@color/white"
                    />

            <TextView
                android:id="@+id/cooperating"
                android:text="Cooperation"
                android:layout_width="150dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_below="@id/cooperating_img"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pager"
            >
        </androidx.viewpager.widget.ViewPager>
    </FrameLayout>

</RelativeLayout>